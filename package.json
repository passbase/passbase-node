{
  "name": "@passbase/node",
  "version": "0.0.1",
  "description": "Passbase API client for NodeJS",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "engines": {
    "node": "12.x"
  },
  "keywords": [
    "ts",
    "typescript",
    "sdk",
    "nodejs",
    "passbase",
    "api",
    "client"
  ],
  "scripts": {
    "clean": "rm -rf lib",
    "build": "tsc --project tsconfig.json",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tslint-tsconfig.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "npm run lint",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "author": "Passbase <developer@passbase.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/node-fetch": "^2.5.7",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "node-fetch": "^2.6.0"
  }
}
